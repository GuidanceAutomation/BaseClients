<UserControl x:Class="BaseClients.Controls.IsConnectedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaseClients.Controls"
             xmlns:gaCoreC="clr-namespace:GACore.Controls;assembly=GACore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <gaCoreC:LabelContentControl Header="IsConnected:">
        <CheckBox Grid.Column="1" IsEnabled="False" IsChecked="{Binding Path=IsConnected, Mode=OneWay}"/>
    </gaCoreC:LabelContentControl>
</UserControl>
